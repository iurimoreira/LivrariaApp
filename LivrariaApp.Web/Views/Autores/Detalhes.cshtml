@model LivrariaApp.Web.Models.AutorViewModel
@{
    ViewBag.Title = "Detalhes";
}

<div>
    <a class="bt-novo-livro" href="@Url.Action("Criar","Autores")"> Adicionar novo autor </a>
    <br /> <br />
    <h2 class="titulo-lista"> Todos os autores cadastrados no sistema </h2>

    <div class="box-livro">
        <p class="p-titulo"><strong>Nome:</strong>@Html.DisplayFor(model => model.Nome)</p>
        <p class="p-isbn"><strong>ISBN:</strong> @Html.DisplayFor(model => model.Sobrenome)</p>
        <p class="p-isbn"><strong>Ano:</strong> @Html.DisplayFor(model => model.AnoNascimento)</p>

        <ul class="menu-acoes-livro">
            <li class="item-acao-livro">
                <a onclick="return confirm('Você deseja deletar este autor?')" href="@Url.Action("Delete","Autores", new {id= Model.AutorId})">Deletar</a>
            </li>
            <li class="item-acao-livro">
                <a href="@Url.Action("Editar","Autores",new {id = Model.AutorId})">Editar</a>
            </li>
        </ul>


    </div>
</div>

