@model LivrariaApp.Web.Models.LivroViewModel
@{
    ViewBag.Title = "Detalhes";
}

<div>
    <a class="bt-novo-livro" href="@Url.Action("Criar","Livros")"> Adicionar novo livro </a>
    <br /> <br />
    <h2 class="titulo-lista"> Todos os livros cadastrados no sistema </h2>

    <div class="box-livro">
        <p class="p-titulo"><strong>Título:</strong>@Html.DisplayFor(model => model.Titulo)</p>
        <p class="p-isbn"><strong>ISBN:</strong> @Html.DisplayFor(model => model.Isbn)</p>
        <p class="p-isbn"><strong>Ano:</strong> @Html.DisplayFor(model => model.Ano)</p>

        <ul class="menu-acoes-livro">
            <li class="item-acao-livro">
                <a onclick="return confirm('Você deseja deletar este livro?')" href="@Url.Action("Delete","Livros", new {id= Model.LivroId})">Deletar</a>
            </li>
            <li class="item-acao-livro">
                <a href="@Url.Action("Editar","Livros",new {id = Model.LivroId})">Editar</a>
            </li>
        </ul>


    </div>
</div>
